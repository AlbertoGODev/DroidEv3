<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guerritastudio.albertogarcia.droidev3.ui.fragment.TextToSpeechFragment">

    <TextView
        android:id="@+id/fragment_translate_language_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/to_speech_btn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_s"
            android:background="@drawable/abc_cab_background_top_mtrl_alpha"
            android:src="@android:drawable/ic_menu_send"
            android:text="@string/to_speech" />

        <EditText
            android:id="@+id/to_speech_et"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_l"
            android:gravity="center_horizontal"
            android:hint="@string/insert_text_here" />

    </LinearLayout>

</RelativeLayout>