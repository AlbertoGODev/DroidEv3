<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guerritastudio.albertogarcia.droidev3.ui.fragment.JoystickViewPagerFragment">

    <com.guerritastudio.albertogarcia.droidev3.widget.RegisterViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_joystick_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/background_pager"
            android:paddingBottom="@dimen/padding_xs"
            android:paddingTop="@dimen/padding_xs"
            android:textColor="@color/white" />

    </com.guerritastudio.albertogarcia.droidev3.widget.RegisterViewPager>

</FrameLayout>